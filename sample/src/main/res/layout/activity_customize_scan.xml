<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.devilsen.devileye.view.ScanView
        android:id="@+id/surface_customize_view_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/devil_eye_notice"
        android:textColor="@color/devil_eye_text_notice" />

    <LinearLayout
        android:id="@+id/layout_customize_scan_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_customize_scan_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_touch_view"
            android:padding="9dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/text_view_customize_scan_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/QRCode"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/text_view_customize_option_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_button_take_photo"
        android:gravity="center"
        android:padding="15dp" />

</RelativeLayout>